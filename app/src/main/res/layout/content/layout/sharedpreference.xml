<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/shared_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/please_edit" >
    </EditText>

    <Button
        android:id="@+id/shared_but1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/please_write" />

    <Button
        android:id="@+id/shared_but2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/please_read" />

    <TextView
        android:id="@+id/shared_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/read_text" />

    <Button
        android:id="@+id/preference_activity_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/preferenceactivity" />

</LinearLayout>